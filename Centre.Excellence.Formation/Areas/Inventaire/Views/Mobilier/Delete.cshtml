@model Mobilier

@{
    ViewData["Title"] = "Mobilier";
}

<div class="Centrer">
    <h3 class="text-beau">Supprimer le mobilier</h3>
    <br />
    <blockquote class="blockquote text-center">
        <a asp-area="Inventaire" asp-controller="Mobilier" asp-action="Update" asp-route-id="@Model.ID" class="btn btn-outline-info">Modifier</a>
        <a asp-area="Inventaire" asp-controller="Mobilier" class="btn btn-outline-primary" asp-action="Index">Retour aux mobiliers</a>
        <h4 class="text-danger" style="margin:15px;">Etes vous sûr de supprimer ce mobilier!</h4>

    </blockquote>
    <div class="container">
        <div class="row">
            <div class="col-2">
                @Html.DisplayNameFor(m => Model.ID)
            </div>
            <div class="col-10 text-truncate">
                @Html.DisplayFor(m => Model.ID)
            </div>

            <div class="col-2">
                @Html.DisplayNameFor(m => Model.Description)
            </div>
            <div class="col-10 text-truncate">
                @Html.DisplayFor(m => Model.Description)
            </div>

            <div class="col-2">
                @Html.DisplayNameFor(m => Model.Quantite)
            </div>
            <div class="col-10">
                @Html.DisplayFor(m => Model.Quantite)
            </div>

            <div class="col-2">
                @Html.DisplayNameFor(m => Model.Localisation)
            </div>
            <div class="col-10">
                @Html.DisplayFor(m => Model.Localisation)
            </div>

            <div class="col-2 text-capitalize">
                @Html.DisplayNameFor(m => Model.Etat)
            </div>
            <div class="col-10">
                @Html.DisplayFor(m => Model.Etat)
            </div>
        </div>
    </div>
    <form asp-area="Inventaire" class="blockquote text-center" asp-controller="Mobilier" asp-action="Delete" asp-route-idmob="@Model.ID" method="post">
        <input type="submit" class="btn btn-danger" value="Supprimer" />
    </form>
</div>