@model IEnumerable<Mobilier>
<h3>Tableau des mobiliers</h3>
<br />
<a asp-area="Inventaire" asp-controller="Mobilier" asp-action="Create" class="btn btn-outline-primary">Nouveau mobilier</a>
<a onclick="imprimer('tableau')">Imprimer</a>
<br />
<br />


<table class="table table-striped table-sm" style=" margin-right: 10px;" id="tableau">
    <caption>Rapport des mobiliers du centre d'excellence</caption>
    <thead class="thead-light">
        <tr>
            <th>Description du mobilier</th>
            <th>Quantité</th>
            <th>Localisation</th>
            <th>Etat</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Mobilier item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(m => item.Description)
                </th>
                <td>
                    @Html.DisplayFor(m => item.Quantite)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Localisation)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Etat)
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function imprimer(divName) {
        var printContent = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;
        document.body.innerHTML = printContent;
        window.print();
        document.body.innerHTML = originalContents
    }
</script>