@model IEnumerable<Mobilier>



<div class="Centrer">
    <h3 class="text-beau">Tableau des mobiliers</h3>
    <br />
    <blockquote class="blockquote text-center">
        <a asp-area="Inventaire" asp-controller="Mobilier" asp-action="Create" class="btn btn-outline-primary">Nouveau mobilier</a>
        <a asp-area="Inventaire" asp-controller="Mobilier" asp-action="RapportMobilier" class="btn btn-outline-dark">Rapport des mobiliers</a>
    </blockquote>
    <br /><br />

    <div class="table-responsive-sm">
        <table class="table table-striped table-sm">
            <thead class="thead-light">
                <tr>
                    <th>Description du mobilier</th>
                    <th>Quantité</th>
                    <th>Localisation</th>
                    <th>Etat</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <!-- style="max-width: 200px;" class="overflow-auto"-->
            <tbody>
                @foreach (Mobilier item in Model)
                {
                    <tr>
                        <th style="max-width:200px" class="overflow-auto">
                            @Html.DisplayFor(m => item.Description)
                        </th>
                        <td>
                            @Html.DisplayFor(m => item.Quantite)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Localisation)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Etat)
                        </td>
                        <td style="width:100px">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a asp-area="Inventaire" asp-controller="Mobilier" asp-action="Detail" asp-route-id="@item.ID" class="btn btn-info btn-sm">Detail</a>
                                <a asp-area="Inventaire" asp-controller="Mobilier" asp-action="Update" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Modifier</a>
                                <a asp-area="Inventaire" asp-controller="Mobilier" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-light btn-sm">Supprimer</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
