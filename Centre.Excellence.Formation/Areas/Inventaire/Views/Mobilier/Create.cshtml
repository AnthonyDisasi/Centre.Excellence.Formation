@model Mobilier

@{
    ViewData["Title"] = "Mobilier";
}

<section class="get_in_touch">
    <div class="container">

        <h1 class="title">Nouveau mobilier</h1>
        <!---->
        <form asp-area="Inventaire" asp-controller="Mobilier" asp-action="newLocalisation" method="get">
            <div class="input-group contact-form mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text colorbtn">
                        <a asp-area="Inventaire" style="text-decoration:none; color:white;" asp-controller="Mobilier" asp-action="Index">Retour aux mobiliers</a>
                    </span>
                </div>
                <input type="text" class="form-control input-textt" name="nom" value="@ViewData["message"]" aria-label="Amount (to the nearest dollar)">
                <div class="input-group-append">
                    <span class="input-group-text colorbtn"><input class="butonAjouter" type="submit" value="Ajouter" /></span>
                </div>
            </div>
        </form>
        <br />

        <form asp-area="Inventaire" asp-controller="Mobilier" asp-action="Create" method="post">
            <div class="contact-form row">

                <div class="form-field col-lg-12">
                    <input type="text" asp-for="Description" class="input-text">
                    <label asp-for="Description" class="label">Description <span asp-validation-for="Description" class="text-danger"></span></label>
                </div>

                <div class="form-field col-lg-6">
                    <select class="input-text" asp-for="Etat" asp-items="Html.GetEnumSelectList<Etat>()">
                        <option value=""></option>
                    </select>
                    <label asp-for="Etat" class="label">Etat <span asp-validation-for="Etat" class="text-danger"></span></label>
                </div>

                <div class="form-field col-lg-6">
                    <select class="input-text" asp-for="Localisation" asp-items="@ViewBag.Localisations">
                        <option value=""></option>
                    </select>
                    <label class="label">Local <span asp-validation-for="Quantite" class="text-danger"></span></label>
                </div>


                <div class="form-field col-lg-6">
                    <input type="text" class="input-text" asp-for="Quantite">
                    <label asp-for="Quantite" class="label">Quantité <span asp-validation-for="Quantite" class="text-danger"></span></label>

                </div>

                <div class="form-field col-lg-6">
                    <input type="submit" name="" class="submit-btn" value="Enregistrer">
                </div>
            </div>
        </form>
    </div>
</section>
</script>