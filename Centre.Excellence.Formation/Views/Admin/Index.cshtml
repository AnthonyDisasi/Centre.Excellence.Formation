@model IEnumerable<ApplicationUSer>

<div class="bg-primary panel-body"><h4>Compte d'utilisateur</h4></div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-condensed table-bordered">
    <tr><th>ID</th><th>Nom</th><th>E-mail</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">Aucun compte d'utilisateur</td></tr>
    }
    else
    {
        foreach (ApplicationUSer user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>

                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Modifier</a>
                        <button type="submit" class="btn btn-sm btn-danger">Retirer</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="Create">Ajouter un utilisateur</a> 